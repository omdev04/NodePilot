# Server Configuration
PORT=3001
NODE_ENV=development
HOST=0.0.0.0

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Projects Storage Path
PROJECTS_DIR=/opt/deployer/projects

# Backups Storage Path
BACKUPS_DIR=/opt/deployer/backups

# Logs Directory (for Git operations)
LOG_DIR=/opt/deployer/logs

# Git Deploy Configuration
# Git deploy token (optional) - if set, embedding tokens into https clone URL will be used
# For per-project tokens we recommend adding GIT_AUTH_TOKEN into the project env vars and encrypting it.
GIT_AUTH_TOKEN=

# API URL (for webhook generation and OAuth callbacks)
API_URL=http://localhost:9001

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000

# GitHub OAuth (optional - for repository access)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# GitLab OAuth (optional - for repository access)
GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=

# Bitbucket OAuth (optional - for repository access)
BITBUCKET_CLIENT_ID=
BITBUCKET_CLIENT_SECRET=

# Encryption Key for Environment Variables (CHANGE THIS!)
ENCRYPTION_KEY=nodepilot-encryption-key-change-in-production

# Admin Credentials (First Time Setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# File Upload Limits
MAX_UPLOAD_SIZE=209715200

# Database
DB_PATH=./deployer.db

# PM2 Configuration
PM2_HOME=/opt/deployer/.pm2

# How many backups to keep per project (default 5)
BACKUP_RETENTION_COUNT=5

# Rollback the deployment automatically on a failed health check
# Set to true to enable auto-rollback
ROLLBACK_ON_FAILURE=false
